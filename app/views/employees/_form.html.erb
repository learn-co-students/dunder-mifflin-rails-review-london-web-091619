

<%= form_for(@employee) do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :alias %>
    <%= f.text_field :alias %><br><br>

    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.label :office %>
    <%= f.text_field :office %><br><br>

    <%= collection_select(:employee, :dog_id, Dog.all, :id, :name)%><br><br>

    <%= f.submit %><br><br>
<% end %>

<%= link_to 'Back', employees_path %>